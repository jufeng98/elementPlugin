{
  "name": "el-carousel",
  "attributes": [
    {
      "name": "height",
      "desc": "height of the carousel",
      "type": "string",
      "optionValue": "—",
      "options": [],
      "defaultValue": "—"
    },
    {
      "name": "initial-index",
      "desc": "index of the initially active slide (starting from 0)",
      "type": "number",
      "optionValue": "—",
      "options": [],
      "defaultValue": "0"
    },
    {
      "name": "trigger",
      "desc": "how indicators are triggered",
      "type": "string",
      "optionValue": "hover/click",
      "options": [
        "hover",
        "click"
      ],
      "defaultValue": "hover"
    },
    {
      "name": "autoplay",
      "desc": "whether automatically loop the slides",
      "type": "boolean",
      "optionValue": "—",
      "options": [],
      "defaultValue": "true"
    },
    {
      "name": "interval",
      "desc": "interval of the auto loop, in milliseconds",
      "type": "number",
      "optionValue": "—",
      "options": [],
      "defaultValue": "3000"
    },
    {
      "name": "indicator-position",
      "desc": "position of the indicators",
      "type": "string",
      "optionValue": "outside/none",
      "options": [
        "outside",
        "none"
      ],
      "defaultValue": "—"
    },
    {
      "name": "arrow",
      "desc": "when arrows are shown",
      "type": "string",
      "optionValue": "always/hover/never",
      "options": [
        "always",
        "hover",
        "never"
      ],
      "defaultValue": "hover"
    },
    {
      "name": "type",
      "desc": "type of the Carousel",
      "type": "string",
      "optionValue": "card",
      "options": [],
      "defaultValue": "—"
    },
    {
      "name": "loop",
      "desc": "display the items in loop",
      "type": "boolean",
      "optionValue": "-",
      "options": [],
      "defaultValue": "true"
    },
    {
      "name": "direction",
      "desc": "display direction",
      "type": "string",
      "optionValue": "horizontal/vertical",
      "options": [
        "horizontal",
        "vertical"
      ],
      "defaultValue": "horizontal"
    }
  ],
  "props": [],
  "options": [],
  "shortcuts": [],
  "slots": [],
  "events": [
    {
      "name": "@change",
      "desc": "triggers when the active slide switches",
      "param": "index of the new active slide, index of the old active slide"
    }
  ],
  "methods": [
    {
      "name": "setActiveItem",
      "desc": "manually switch slide",
      "param": "index of the slide to be switched to, starting from 0; or the `name` of corresponding `el-carousel-item`"
    },
    {
      "name": "prev",
      "desc": "switch to the previous slide",
      "param": "—"
    },
    {
      "name": "next",
      "desc": "switch to the next slide",
      "param": "—"
    }
  ]
}